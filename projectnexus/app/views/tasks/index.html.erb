<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Duedate</th>
    <th>Status</th>
    <th>Objective Name</th>
    <th>Assigned user</td>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.description %></td>
    <td><%= task.duedate %></td>
    <td><%= task.status %></td>
    <td><%= task.objective.name %></td>
    <td>
    <% if task.user %>
        <%= task.user.full_name %>
	<% else %>
	Unassigned
	<% end %>
    </td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

